extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{project_name} 

        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in technologies
            li=technology

        a.button.expanded(href=live_link) Live Demo
        a.button.expanded(href=github_link) GitHub Repo
    
    //- Loops through all images in the projects .image_urls property
    each image in image_urls
      //- Makes sure to not include the thumbnail image
      if !image.includes('550')
        img.image(src=image)
  
